<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_azul_difuminado"
    tools:context=".ui.GestionPerfiles.RegistroActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_marginVertical="@dimen/margin_small"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#33FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <!-- Imagen de perfil -->
            <ImageView
                android:id="@+id/imagenSeleccionada"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_normal"
                android:background="@drawable/borde_redondo"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24" />

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:text="Crear Cuenta"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <!-- Nombre -->
            <EditText
                android:id="@+id/editNombre"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/input_margin_vertical"
                android:background="#33FFFFFF"
                android:hint="Nombre"
                android:inputType="textPersonName"
                android:padding="@dimen/padding_small"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:textColorHint="#CCFFFFFF" />

            <!-- Apellido -->
            <EditText
                android:id="@+id/editApellido"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/input_margin_vertical"
                android:background="#33FFFFFF"
                android:hint="Apellido"
                android:inputType="textPersonName"
                android:padding="@dimen/padding_small"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:textColorHint="#CCFFFFFF" />

            <!-- Correo electrónico -->
            <EditText
                android:id="@+id/editCorreo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/input_margin_vertical"
                android:background="#33FFFFFF"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_small"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:textColorHint="#CCFFFFFF" />

            <!-- Contraseña -->
            <EditText
                android:id="@+id/editContrasena"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/input_margin_vertical"
                android:background="#33FFFFFF"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="@dimen/padding_small"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:textColorHint="#CCFFFFFF" />

            <!-- Repetir contraseña -->
            <EditText
                android:id="@+id/editRepetirContrasena"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/margin_normal"
                android:background="#33FFFFFF"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:drawableTint="#FFFFFF"
                android:hint="Repetir contraseña"
                android:inputType="textPassword"
                android:padding="@dimen/padding_small"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_body"
                android:textColorHint="#CCFFFFFF" />

            <!-- Botón de registro -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:backgroundTint="#2196F3"
                android:text="Crear Cuenta"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_button"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#e74c3c"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
