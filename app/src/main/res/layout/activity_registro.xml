<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginbk"
    tools:context=".ui.GestionPerfiles.RegistroActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/customer_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_horizontal">

            <!-- Imagen de perfil -->
            <ImageView
                android:id="@+id/imagenSeleccionada"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:src="@drawable/baseline_person_24"
                android:background="@drawable/baseline_circle_24"
                android:scaleType="centerCrop" />

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registro"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:layout_marginBottom="16dp" />

            <!-- Nombre -->
            <EditText
                android:id="@+id/editNombre"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/customer_edittext"
                android:hint="Nombre"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="textPersonName" />

            <!-- Apellido -->
            <EditText
                android:id="@+id/editApellido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/customer_edittext"
                android:hint="Apellido"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="textPersonName" />

            <!-- Correo electrónico -->
            <EditText
                android:id="@+id/editCorreo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/customer_edittext"
                android:hint="Correo electrónico"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="textEmailAddress" />

            <!-- Contraseña -->
            <EditText
                android:id="@+id/editContrasena"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/customer_edittext"
                android:hint="Contraseña"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="textPassword" />

            <!-- Repetir contraseña -->
            <EditText
                android:id="@+id/editRepetirContrasena"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/customer_edittext"
                android:hint="Repetir contraseña"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:inputType="textPassword" />

            <!-- Botón de registro -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Registrarse"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/purple"
                android:textColor="@color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
