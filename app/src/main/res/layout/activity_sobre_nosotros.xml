<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Sobre nosotros"
        app:navigationIcon="@drawable/arrow_back" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GestorXpress"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GestorXpress es una aplicación móvil desarrollada por Mario Herrero y Alfonso Chenche como parte del proyecto final del ciclo de Desarrollo de Aplicaciones Multiplataforma (DAM), versión 1.0 (abril de 2025)."
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Misión -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Por qué creamos GestorXpress?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En los hogares modernos, donde cada miembro de la familia tiene horarios distintos, se hace necesario organizar mejor las tareas. Existen muchas apps, pero pocas están pensadas para el uso familiar sin conexión. GestorXpress es nuestra propuesta sencilla, intuitiva y 100% offline."
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Funcionalidades -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué ofrece la app?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Gestión de tareas con título, prioridad, estado y fecha límite.\n• Sistema de perfiles individuales y un perfil 'familiar'.\n• Estadísticas personalizadas y globales.\n• Notificaciones automáticas y recordatorios configurables.\n• Uso completamente local sin necesidad de Internet.\n• Interfaz accesible y clara para todas las edades."
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Futuro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué viene después?"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Planeamos integrar sincronización entre dispositivos, asistencia por voz (Alexa, Google Assistant), y una versión para iOS. También se ampliarán las estadísticas y los métodos de recordatorio inteligentes."
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
